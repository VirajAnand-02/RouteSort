# ============================================
# RouteSort Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# Authentication - Clerk
# ============================================
# Get these from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here

# ============================================
# Database - PostgreSQL
# ============================================
# Production: Use Supabase or your PostgreSQL provider
# Local dev: postgresql://routesort:routesort_dev_password@localhost:5432/routesort
DATABASE_URL=postgresql://user:password@localhost:5432/routesort

# ============================================
# Redis - Job Queue
# ============================================
# For async image classification and route optimization jobs
# Local dev: redis://localhost:6379
REDIS_URL=redis://localhost:6379

# ============================================
# Storage - Supabase or S3-compatible
# ============================================
# For photo uploads
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Alternative: Use MinIO for local dev
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=routesort-uploads

# Or use S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=routesort-uploads

# ============================================
# Next.js
# ============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ============================================
# Image Classification API (optional)
# ============================================
# OpenAI Vision API
OPENAI_API_KEY=sk-your_openai_api_key

# Or Google Cloud Vision
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Or Azure Computer Vision
AZURE_COMPUTER_VISION_KEY=your_azure_key
AZURE_COMPUTER_VISION_ENDPOINT=https://your-resource.cognitiveservices.azure.com/

# ============================================
# Maps & Geocoding (optional)
# ============================================
# For reverse geocoding and address validation
NEXT_PUBLIC_NOMINATIM_URL=https://nominatim.openstreetmap.org

# Or use Google Maps
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ============================================
# Monitoring & Analytics (optional)
# ============================================
# Sentry for error tracking
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# PostHog for analytics
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ============================================
# Email (optional)
# ============================================
# For notifications
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@routesort.com

# Or use SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# ============================================
# Feature Flags (optional)
# ============================================
ENABLE_IMAGE_CLASSIFICATION=true
ENABLE_REWARDS_SYSTEM=true
ENABLE_REAL_TIME_TRACKING=true
